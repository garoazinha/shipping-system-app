<h2>Cadastrar nova modalidade de transporte</h2>

<%= form_with(model: @shipping_mode) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :max_distance %>
    <%= f.number_field :max_distance %>
  </div>
  <div>
    <%= f.label :min_distance %>
    <%= f.number_field :min_distance %>
  </div>
  <div>
    <%= f.label :max_weight  %>
    <%= f.number_field :max_weight %>
  </div>
  <div>
    <%= f.label :min_weight %>
    <%= f.number_field :min_weight %>
  </div>
  <div>
    <%= f.label :fixed_fee %>
    <%= f.number_field :fixed_fee, step: 0.01 %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit 'Enviar' %>
<% end %>