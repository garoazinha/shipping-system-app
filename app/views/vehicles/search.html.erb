<h2>Resultados da pesquisa: <%= @query %></h2>

<%= @vehicles.count %> <%= Vehicle.model_name.human(count: @vehicles.count).downcase %> <%= t(:found, count: @vehicles.count) %>
<div>
<% @vehicles.each do |v| %>
  <dl>
    <dt><%= Vehicle.human_attribute_name(:plate_number) %>:</dt>
    <dd><%= link_to v.plate_number.upcase, vehicle_path(v.id) %></dd>
    <dt><%= Vehicle.human_attribute_name(:model) %>:</dt>
    <dd><%= v.model %></dd>
    <dt><%= Vehicle.human_attribute_name(:brand) %>:</dt>
    <dd><%= v.brand %></dd>
    <dt><%= Vehicle.human_attribute_name(:year) %>:</dt>
    <dd><%= v.year %></dd>
    <dt>Status: </dt>
    <dd><%= t(v.activity) %></dd>
  
  
  </dl>
<% end %>
</div>