<h2>Prazos para <%= @shipping_mode.name %></h2>

<div>
  <table>
    <thead>
      <tr>
        <th><%= DeliveryTime.human_attribute_name(:min_distance) %></th>
        <th><%= DeliveryTime.human_attribute_name(:max_distance) %></th>
        <th><%= DeliveryTime.human_attribute_name(:estimated_delivery_time) %></th>
      <tr>
    </thead>
    <% @delivery_times.active.each do |dt| %>
      <tr>
        <td><%= dt.min_distance %></td>
        <td><%= dt.max_distance %></td>
        <td><%= dt.estimated_delivery_time %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Editar', edit_shipping_mode_delivery_time_path(@shipping_mode.id, dt.id) %></td>
        <% end %>
      </tr>
    <% end %>
  
  </table>
  
</div>

<% if user_signed_in? && current_user.admin? %>
  <h3>Cadastro de novas configurações</h3>
  <%= button_to 'Deletar prazos', disable_delivery_times_shipping_mode_path(@shipping_mode.id) %>
  <%= render 'form' %>
<% end %>